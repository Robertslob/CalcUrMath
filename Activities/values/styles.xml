<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AnsView">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_weight">10</item>
		<item name="android:text">@string/emptytext</item>
		<item name="android:textSize">20sp</item>
    </style>
    
    <style name="AnsView.Out">
        <item name="android:gravity">right</item>
    </style>
    
    <style name="BscButton" parent="@android:attr/buttonStyleSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="BscButton.StdTextSize">
        <item name="android:textSize">23sp</item>
    </style>
    
    <style name="LinearColumn" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="functionEdit" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item> 
    </style>

</resources>

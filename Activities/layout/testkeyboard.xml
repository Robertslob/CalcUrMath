<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context="com.example.calcurmath.MainActivity"
    tools:ignore="NestedWeights" >

		    <ScrollView
		        android:id="@+id/scrollAns"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="40" >

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical" >

		            <TextView
		                android:id="@+id/ansView1"
		                style="@style/AnsView" />

		            <TextView
		                android:id="@+id/ansView2"
		                style="@style/AnsView.Out" />

		            <TextView
		                android:id="@+id/ansView3"
		                style="@style/AnsView" />
		            <TextView
		                android:id="@+id/ansView4"
		                style="@style/AnsView.Out" />

		            <TextView
		                android:id="@+id/ansView5"
		                style="@style/AnsView" />

		            <TextView
		                android:id="@+id/ansView6"
		                style="@style/AnsView.Out" />

		            <TextView
		                android:id="@+id/ansView7"
		                style="@style/AnsView" />

		            <TextView
		                android:id="@+id/ansView8"
		                style="@style/AnsView.Out" />

		            <TextView
		                android:id="@+id/ansView9"
		                style="@style/AnsView" />

		            <TextView
		                android:id="@+id/ansView10"
		                style="@style/AnsView.Out" />

		            <TextView
		                android:id="@+id/ansView11"
		                style="@style/AnsView" />
		            
		            <TextView
		                android:id="@+id/ansView12"
		                style="@style/AnsView.Out" />

		        </LinearLayout>
		    </ScrollView>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="15" 
		        android:orientation="horizontal" >

		        <EditText
		            android:id="@+id/TextInput"
		            android:inputType="text"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="9"
		            android:ems="10" 
		            android:textSize="50sp" >
		        </EditText>

		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		            <Button
		                android:id="@+id/Button_equals"
		                style="@style/BscButton" 
		                android:layout_weight="1"
		                android:text="@string/equals"
		                android:textSize="25sp" />

		            <Button
		                android:id="@+id/Button_approximate"
		                style="@style/BscButton" 
		                android:layout_weight="1"
		                android:text="@string/approximate"
		                android:textSize="25sp" />

		        </LinearLayout>

		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="55" 
		        android:baselineAligned="false" >

		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="20"
		            android:orientation="vertical" >

		            <Button
		                android:id="@+id/Button_bsc"
		                style="@style/BscButton" 
		                android:text="@string/standard"
		                android:textSize="20sp" />

		            <Button
		                android:id="@+id/Button_func"
		                style="@style/BscButton" 
		                android:text="@string/functions"
		                android:textSize="20sp" />

		            <Button
		                android:id="@+id/Button_geo"
		                style="@style/BscButton" 
		                android:text="@string/geometric"
		                android:textSize="20sp" />

		            <Button
		                android:id="@+id/Button_rest"
		                style="@style/BscButton" 
		                android:text="@string/rest"
		                android:textSize="20sp" />

		        </LinearLayout>

		        <RelativeLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent" 
		            android:layout_weight="80" 
		            android:baselineAligned="false" >
		            
		            <LinearLayout
		                android:id="@+id/bscLinLay"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:baselineAligned="false" >
		                
		                <LinearLayout
		                	style="@style/LinearColumn" >
		                	
		                	<Button
		                	    android:id="@+id/Button_plus"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/add" />
		                    

		                	<Button
		                    	android:id="@+id/Button_seven"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/seven" />

		                	<Button
		                    	android:id="@+id/Button_four"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/four" />

		                	<Button
		                    	android:id="@+id/Button_one"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/one" />             

		            	</LinearLayout>

		            	<LinearLayout
		                	style="@style/LinearColumn" >

		                	<Button
		                    	android:id="@+id/Button_substract"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/subtract" />

		                	<Button
		                    	android:id="@+id/Button_eight"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/eight" />

		                	<Button
		                    	android:id="@+id/Button_five"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/five" />

		                	<Button
		                    	android:id="@+id/Button_two"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/two" />
		            	</LinearLayout>

		            	<LinearLayout
		                	style="@style/LinearColumn" >

		                	<Button
		                    	android:id="@+id/Button_multiply"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/multiply" />

		                	<Button
		                    	android:id="@+id/Button_nine"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/nine" />

		                	<Button
		                    	android:id="@+id/Button_six"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/six" />

		                	<Button
		                    	android:id="@+id/Button_three"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/three" />
		            	</LinearLayout>

		            	<LinearLayout
		                	style="@style/LinearColumn" >

		                	<Button
		                    	android:id="@+id/Button_divide"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/divide" />

		                	<Button
		                    	android:id="@+id/Button_openbr"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/br_open" />

		                	<Button
		                    	android:id="@+id/Button_dot"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/dot" />

		                	<Button
		                    	android:id="@+id/Button_zero"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/zero" />
		            	</LinearLayout>

		            	<LinearLayout
		                	style="@style/LinearColumn" >

		                	<Button
		                    	android:id="@+id/Button_del"
		                    	style="@style/BscButton"
		                    	android:text="@string/delete"
		                    	android:textSize="25sp" />

		                	<Button
		                    	android:id="@+id/Button_closebr"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/br_close" />

		                	<Button
		                    	android:id="@+id/Button_x"
		                    	style="@style/BscButton.StdTextSize" 
		                    	android:text="@string/x" />

		                	<Button
		                    	android:id="@+id/Button_ans"
		                    	style="@style/BscButton" 
		                    	android:text="@string/ans" 
		                    	android:textSize="23sp" />	
		                    	                    
		            	</LinearLayout>     
		            
		            </LinearLayout>
		            
		            <LinearLayout
		            	android:id="@+id/funcLinLay"
		            	android:layout_width="match_parent"
		            	android:layout_height="match_parent" >
		            	
		                <LinearLayout
		            	    style="@style/LinearColumn" >
		                	
		                	<Button
		                    	android:id="@+id/Button_squared"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/squared" />
		                
		                	<Button
		                    	android:id="@+id/Button_sqrt"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/sqrt" />
		                
		                	<Button
		                    	android:id="@+id/Button_power"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/power" />
		                
		                	<Button
		                    	android:id="@+id/Button_root"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/root" />
		            	</LinearLayout>
		            	
		                <LinearLayout
		            	    style="@style/LinearColumn" >
		                	
		                	<Button
		                    	android:id="@+id/Button_inv"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/inv" />
		                
		                	<Button
		                    	android:id="@+id/Button_abs"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/abs" />
		                
		                	<Button
		                    	android:id="@+id/Button_log"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/log" />
		                
		                	<Button
		                    	android:id="@+id/Button_ln"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/ln" />
		            	</LinearLayout>
		            	
		                <LinearLayout
		            	    style="@style/LinearColumn" >
		                	
		                    <Button
		                        android:id="@+id/Button_diff"
		                        style="@style/BscButton.StdTextSize"
		                        android:text="@string/diff" />
		                    
		                    <Button
		                        android:id="@+id/Button_integr"
		                        style="@style/BscButton.StdTextSize"
		                        android:text="@string/integr" />
		                </LinearLayout>		                	        
		        
		        	</LinearLayout>
		        	
		        	<LinearLayout
		            	android:id="@+id/geoLinLay"
		            	android:layout_width="match_parent"
		            	android:layout_height="match_parent" >
		            
		            	<LinearLayout
		            	    style="@style/LinearColumn" >
		            	    
		                	<Button
		                    	android:id="@+id/Button_sin"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/sin" />
		                
		                	<Button
		                    	android:id="@+id/Button_cos"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/cos" />
		                
		                	<Button
		                    	android:id="@+id/Button_tan"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/tan" />
		                
		                	<Button
		                    	android:id="@+id/Button_pi"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/pi"
		                    	android:textSize="30sp" />
		            	</LinearLayout>
		            
		            	<LinearLayout
							style="@style/LinearColumn" >
		                	
		                	<Button
		                    	android:id="@+id/Button_asin"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/asin" />
		                
		                	<Button
		                    	android:id="@+id/Button_acos"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/acos" />
		                
		                	<Button
		                    	android:id="@+id/Button_atan"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/atan" />
		                	
		                	<Button
		                	    android:id="@+id/Button_graph"
		                	    style="@style/BscButton.StdTextSize"
		                	    android:text="@string/graphbutton" />
		                
		            	</LinearLayout>
		            	
		            </LinearLayout>
		            	
		            <LinearLayout
		            	android:id="@+id/restLinLay"
		            	android:layout_width="match_parent"
		            	android:layout_height="match_parent" >
		            
		            	<LinearLayout
		            	    style="@style/LinearColumn"
		            	    tools:ignore="Views" >
		            	    
		                	<Button
		                    	android:id="@+id/Button_equalsrest"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/equals" />
		                
		                	<Button
		                    	android:id="@+id/Button_greater"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/greater" />
		                
		                	<Button
		                    	android:id="@+id/Button_smaller"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/smaller" />
		                
		                	<Button
		                    	android:id="@+id/Button_constants"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/constants" />
		            	</LinearLayout>
		            
		            	<LinearLayout
							style="@style/LinearColumn" >
		                	
		                	<Button
		                    	android:id="@+id/Button_unequal"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/unequal" />
		                
		                	<Button
		                    	android:id="@+id/Button_greaterequal"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/gre" />
		                
		                	<Button
		                    	android:id="@+id/Button_smallerequal"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/sme" />
		                	
		                	<Button
		                	    android:id="@+id/Button_graphrest"
		                	    style="@style/BscButton.StdTextSize"
		                	    android:text="@string/toGraph" />
		                
		            	</LinearLayout>
		            	
		            	<LinearLayout
							style="@style/LinearColumn" >
		                	
		                	<Button
		                    	android:id="@+id/Button_factorial"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/fact" />
		                
		                	<Button
		                    	android:id="@+id/Button_ncr"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/ncr" />
		                
		                	<Button
		                    	android:id="@+id/Button_npr"
		                    	style="@style/BscButton.StdTextSize"
		                    	android:text="@string/npr" />
		                	
		                	<Button
		                	    android:id="@+id/Button_about"
		                	    style="@style/BscButton.StdTextSize"
		                	    android:text="@string/about" />
		                
		            	</LinearLayout>
		            	
		            </LinearLayout>
		            
		        </RelativeLayout>
		        
		     </LinearLayout>
		        
		</LinearLayout>
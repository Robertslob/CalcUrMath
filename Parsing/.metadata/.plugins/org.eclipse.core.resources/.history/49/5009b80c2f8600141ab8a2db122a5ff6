import java.io.Console;



public class Parser
{
	public String input;
	private int cursor;
	Parser(String input)
	{
		this.input = input;
		this.cursor = 0;
	}
	
	char getCurrent()
	{
		return this.input.charAt(cursor);
	}
	
	Formula parseExpression()
	{
		Formula term, expr;
		term = parseTerm();
		return null;
	}
	
	Formula parseTerm()
	{
		Formula fact, term;
		fact = parseFactor();
	}
	
	Formula parseFactor()
	{
		if (getCurrent() == '(')
		{
			cursor++;
			Formula e = parseExpression();
			if (getCurrent() == ')')
			{
				cursor++;
				return e;
			}
			else
			{
				String error;
				error = "Can't parse this: " + input.substring(cursor) + "/nAre the brackets balanced?";
				System.out.println(error);
				return null;
			}
		}
		else if (getCurrent() >= '0' && getCurrent() <= '9')
		{
			double number = 0;
			while(getCurrent() >= '0' && getCurrent() <= '9')
			{
				number *= 10;
				number += Integer.parseInt(input.substring(cursor, cursor + 1));
				cursor++;
			}
			if (getCurrent() == '.')
			{
				cursor++;
				for(int t = 1;getCurrent() >= '0' && getCurrent() <= '9'; t++)
				{
					number += Integer.parseInt(input.substring(cursor, cursor + 1))/(Math.pow(10, -1 * t));
					cursor++;
				}
			}
		}
	}
}
